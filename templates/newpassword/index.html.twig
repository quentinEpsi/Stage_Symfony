{% extends 'base.html.twig' %}

{% block title %}SR2F | Mot de passe oublié{% endblock %}

{% block body %}
    <style>
        @import url(https://fonts.googleapis.com/css?family=Open+Sans:300,400,700);
        /* css class for the login generated errors */

        .profilepress-reset-status {
            width: 400px;
            text-align: center;
            background-color: #e74c3c;
            color: #ffffff;
            border: medium none;
            border-radius: 4px;
            font-size: 17px;
            font-weight: normal;
            line-height: 1.4;
            padding: 8px 5px;
            margin: auto;
        }

        .memo-reset-success {
            width: 400px;
            text-align: center;
            background-color: #2ecc71;
            color: #ffffff;
            border: medium none;
            border-radius: 4px;
            font-size: 17px;
            font-weight: normal;
            line-height: 1.4;
            padding: 8px 5px;
            margin: auto;
        }

        #sc-password {
            background: #f0f0f0;
            width: 400px;
            margin: 0 auto;
            margin-top: 8px;
            margin-bottom: 2%;
            transition: opacity 1s;
            -webkit-transition: opacity 1s;
        }

        #sc-password h1 {
            background: #3399cc;
            padding: 20px 0;
            font-size: 140%;
            font-weight: 300;
            text-align: center;
            color: #fff;
        }

        .ll {
            width : 100%;
        }

        div#sc-password .sc-container {
            background: #f0f0f0;
            padding: 6% 4%;
        }

        div#sc-password input[type="email"],
        div#sc-password input[type="text"],
        div#sc-password input[type="password"] {

            background: #fff;
            margin-bottom: 4%;
            border: 1px solid #ccc;
            padding: 4%;
            font-family: 'Open Sans', sans-serif;
            font-size: 95%;
            color: #555;
        }

        div#sc-password input[type="submit"] {
            width: 100%;
            background: #3399cc;
            border: 0;
            padding: 4%;
            font-family: 'Open Sans', sans-serif;
            font-size: 100%;
            color: #fff;
            cursor: pointer;
            transition: background .3s;
            -webkit-transition: background .3s;
        }

        div#sc-password input[type="submit"]:hover {
            background: #2288bb;
        }
    </style>
    <div id="sc-password">
        <h1>Reinitialiser mon mot de passe</h1>
        <div class="sc-container">
            {{ form_start(form) }}
            {{ form_row(form.motdepasse,{'label':'Nouveau mot de passe :','attr':{'placeholder':'Mot de passe','name':'newpassword'}}) }}
            {{ form_row(form.verif_motdepasse,{'label':'Vérifier mot de passe :','attr':{'placeholder':'Vérifier Mot de passe','name':'newpassword'}}) }}
            {{ form_row(form.valider) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div style="text-align: center">
        {% for message in app.flashes('danger') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}