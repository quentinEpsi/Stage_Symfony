<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Mes demandes{% endblock %}</title>
        {% block stylesheets %}
            <!-- Favicon -->
            <link rel="icon" href="{{ asset('build/images/favicon.png') }}" type="image/x-icon" />
            <!-- Bootstrap CSS -->
            <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet">
            <!-- Animate CSS -->
            <link href="{{ asset('build/vendors/animate/animate.css') }}" rel="stylesheet">
            <!-- Icon CSS-->
            <link rel="stylesheet" href="{{ asset('build/vendors/font-awesome/css/font-awesome.min.css') }}">
            <!-- Camera Slider -->
            <link rel="stylesheet" href="{{ asset('build/vendors/camera-slider/camera.css') }}">
            <!-- Owlcarousel CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/vendors/owl_carousel/owl.carousel.css') }}" media="all">
            <!--Theme Styles CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/css/style.css') }}" media="all" />            
            

        {% endblock %}
          <style>
    

    /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
    .row.content {height: 450px}
    
    /* Set gray background color and 100% height */
    .sidenav {
      padding-top: 20px;
      background-color: #f1f1f1;
      height: 100%;
    }
    
    /* Set black background color, white text and some padding */
    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }
    
    /* On small screens, set height to 'auto' for sidenav and grid */
    @media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 15px;
      }
      .row.content {height:auto;} 
    }
.badge-primary{color:#fff;background-color:#007bff}.badge-primary[href]:focus,.badge-primary[href]:hover{color:#fff;text-decoration:none;background-color:#0062cc}  </style>
    </head>

<body>  

{% block body %}
{% include 'navbar.html.twig' %}
<br>
<div class="container-fluid text-center">
  <div class="row content">
	<div class="col-md-2 sidenav" >
	<h2>Historique</h2>
		<hr>
    {% for Element in Historique %}
    {% if Element[2] == false %}
      {% if Element[1] == "valide" %}
				<div><a href="mondevisdetail/{{Element[4]}}"><p style="display: inline; color: green;">{{Element['0']['1']}} {{Element['0']['2']}}</p><a></div> <br>

      {% elseif Element[1] == "refus" %}
				<div><p style="display: inline; color: red;">{{Element['0']['1']}} {{Element['0']['2']}} (refus)</p></div> <br>
		  {% elseif Element[1] == "AccepteParUnAutre" %}
        <div><p style="display: inline; color: red;">{{Element['0']['1']}} {{Element['0']['2']}} (expiré) </p></div> <br>
      {% elseif Element[1] == "DelaiDepasse" %}
        <div><p style="display: inline; color: red;">{{Element['0']['1']}} {{Element['0']['2']}} (expiré) </p></div> <br>
      {% endif %}
    {% endif %}
    {% endfor %}
	</div>



<div class="col-md-10" >
  <div class="tittle wow fadeInUp">
            <h2 style='padding-top: 0.1em'>Mes demandes de prestations</h2>
            <br>
            <br>
            <br>
        </div>
  	<div class="Devis" >
		 <table class="table table-striped table-bordered table-hover text-center">
		<tr>
                <th  style="text-align: center; vertical-align: middle;"></th>
                <th  style="text-align: center; vertical-align: middle;">Nom</th>
                <th  style="text-align: center; vertical-align: middle;">Prénom</th>
                <th  style="text-align: center; vertical-align: middle;">Date proposition</th>
                <th  style="text-align: center; vertical-align: middle;">Distance en km</th>
                <th  style="text-align: center; vertical-align: middle;">Service</th>
                <th  style="text-align: center; vertical-align: middle;">Détails</th>
                <th  style="text-align: center; vertical-align: middle;">Refuser</th>
		</tr>
		
		{% for Demandes in mesDemandes %}
      <tr>

      {% if Demandes[2] == false %}
        {% if Demandes[3] == false %}
          <td><span class="badge badge-pill badge-primary">Nouveau !</span></td>
        {% elseif Demandes[1] == "AttenteValidation" %}
          <td><span class="badge badge-pill badge-warning">En attente</span></td>
        {% else %}
          <td></td>
        {% endif %}
				<td>{{Demandes[0][0]}}</td>
				<td>{{Demandes[0][1]}}</td>
				<td>{{Demandes[0][2]}}</td>
				<td>{{Demandes[0][3]}}</td>
        <td>{{Demandes[0][4]}}</td>
        <td><a href="mesdemandes/macreationdevis/{{Demandes[0][5]}}"><button type="button" class="btn btn-outline-dark btn">Détails</button></a></td>
        <td><a href="mesdemandes/refuser/{{Demandes[0][5]}}"><button type="button" class="btn btn-outline-warning btn">Refuser</button></a></td>
        {% endif %}
			</tr>
		{% endfor %}
		
		</table>
	</div>
</div>

</div>


</body>
{% block javascripts %}
    <!-- jQuery JS -->
    <script src="{{ asset('build/js/jquery-1.12.0.min.js') }}"></script>
    <!-- Bootstrap JS -->
    <script src="{{ asset('build/js/bootstrap.min.js') }}"></script>
    <!-- Animate JS -->
    <script src="{{ asset('build/vendors/animate/wow.min.js') }}"></script>
    <!-- Camera Slider -->
    <script src="{{ asset('build/vendors/camera-slider/jquery.easing.1.3.js') }}"></script>
    <script src="{{ asset('build/vendors/camera-slider/camera.min.js') }}"></script>
    <!-- Isotope JS -->
    <script src="{{ asset('build/vendors/isotope/imagesloaded.pkgd.min.js') }}"></script>
    <script src="{{ asset('build/vendors/isotope/isotope.pkgd.min.js') }}"></script>
    <!-- Progress JS -->
    <script src="{{ asset('build/vendors/Counter-Up/jquery.counterup.min.js') }}"></script>
    <script src="{{ asset('build/vendors/Counter-Up/waypoints.min.js') }}"></script>
    <!-- Owlcarousel JS -->
    <script src="{{ asset('build/vendors/owl_carousel/owl.carousel.min.js') }}"></script>
    <!-- Stellar JS -->
    <script src="{{ asset('build/vendors/stellar/jquery.stellar.js') }}"></script>
    <!-- Theme JS -->
    <script src="{{ asset('build/js/min/theme.min.js') }}"></script>
{% endblock %}

{% endblock %}