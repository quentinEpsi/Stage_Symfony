{% extends 'base.html.twig' %}
        
{% block title %}Création d'un devis{% endblock %}
{% block stylesheets %}
    <!-- Bootstrap CSS -->
    <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet">
    <!--Theme Styles CSS-->
    <link rel="stylesheet" type="text/css" href="{{ asset('build/css/style.css') }}" media="all" />
 {% endblock %}



{% block body %}
<style>
        th {
            background-color: #337ab7;
            color: white;
        }
</style>

<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav"></div>
    <div class="col-sm-8">
        <div class="tittle wow fadeInUp">
            <h2 style="padding-top: 10px">Information du Client</h2>
            <br>
            <br>
            <br>
        </div>
                <div class="row">
                    <ul class="list-group">
                         <li class="list-group-item"><b>Nom du client:</b> {{ Client.nomClient }}</li>
                         <li class="list-group-item"><b>Prenom du client:</b> {{ Client.prenomClient }}</li>
                         <li class="list-group-item"><b>Adresse de l'intervention:</b> {{ Client.adresseInterventionNumero }} {{ Client.adresseInterventionRue }} - {{ Client.adresseInterventionCp }} {{ Client.adresseInterventionVille }}</li>
                         <li class="list-group-item"><b>Date réalisation:</b> {{ Client.dateProposition|date("d/m/Y H:i")}}</li>
                         <li class="list-group-item"><b>Description supplémentaire:</b> {{ Client.descriptionSup}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav"></div>
    <div class="col-sm-8">
        <div class="tittle wow fadeInUp">
            <h2 style="padding-top: 10px">Veuillez joindre votre devis</h2>
            <br>
            <br>
            <br>
        </div>
            {{ form_start(form) }}
                <table class="table table-striped table-bordered table-hover text-center">
                <thead class="thead-">
                    <tr>
                        <td>{{ form_row(form.fichierJoint) }}<td>
                    </tr>
                    
              
                  
                </table>
                
               {{ form_row(form.Valider) }}

        {{ form_end(form) }}
</body>
{% endblock %}