<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Création d'un devis{% endblock %}</title>
        {% block stylesheets %}
		
           <!-- Favicon -->
            <link rel="icon" href="{{ asset('build/images/favicon.png') }}" type="image/x-icon" />
            <!-- Bootstrap CSS -->
            <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet">
            <!-- Animate CSS -->
            <link href="{{ asset('build/vendors/animate/animate.css') }}" rel="stylesheet">
            <!-- Icon CSS-->
            <link rel="stylesheet" href="{{ asset('build/vendors/font-awesome/css/font-awesome.min.css') }}">
            <!-- Camera Slider -->
            <link rel="stylesheet" href="{{ asset('build/vendors/camera-slider/camera.css') }}">
            <!-- Owlcarousel CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/vendors/owl_carousel/owl.carousel.css') }}" media="all">
            <!--Theme Styles CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/css/style.css') }}" media="all" />
        {% endblock %}



{% block body %}
<style>
        th {
            background-color: #337ab7;
            color: white;
        }
</style>

<div class="badge-center" style="margin: 0 auto; width: 600px; padding-top: 50px;">
    <h3>Informations du Client</h3><br><br>
    <div class="badge-modif" style="font-size: 18px!important">
        <div class ="main-container">
            <div class=" highlight" style="margin-left:0;">
                <div class="row">
                    <ul class="list-group">
                         <li class="list-group-item">Nom du client: {{ Client.nomClient }}</li>
                         <li class="list-group-item">Prenom du client: {{ Client.prenomClient }}</li>
                         <li class="list-group-item">Adresse de l'intervention: {{ Client.adresseInterventionNumero }} {{ Client.adresseInterventionRue }} - {{ Client.adresseInterventionCp }} {{ Client.adresseInterventionVille }}</li>
                         <li class="list-group-item">Date réalisation: {{ Client.dateProposition|date("d/m/Y H:i")}}</li>
                         <li class="list-group-item">Description supplémentaire: {{ Client.descriptionSup}}</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav"></div>
    <div class="col-sm-8">
        <div class="tittle wow fadeInUp">
            <h2>Veuillez joindre votre devis</h2>
            <br>
            <br>
            <br>
        </div>
            {{ form_start(form) }}
                <table class="table table-striped table-bordered table-hover text-center">
                <thead class="thead-">
                    <tr>
                        <td>{{ form_row(form.fichierJoint) }}<td>
                    </tr>
                    
              
                  
                </table>
                
               {{ form_row(form.Valider) }}

        {{ form_end(form) }}
</body>
{% endblock %}