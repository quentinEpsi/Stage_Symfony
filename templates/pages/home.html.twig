{% endblock %}{#End Slider area#}
{% block about %}<!-- About Us Area -->
    <section class="about_us_area row" id="apropos">
        <div class="container">
            <div class="tittle wow fadeInUp">
                <h2>QUI SOMMES-NOUS ?</h2>
            </div>
            <div class="row about_row" style="display: inline-block;">
                <div class="who_we_area col-md-10">
                    <p>Notre site Internet regroupe les serruriers de votre région et vous permet de faire des demandes de devis concernant la serrurerie qui seront envoyées aux professionnels disponibles aux alentours.</p>
                </div>
                <div class="who_we_area col-md-2">
					<img src="{{ asset('build/images/interrogation.png') }}" height="42" width="42">
                    <p>{{ article1.descriptionFormule }}</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}{#End About Us Area#}
{% block professional_builder %}<!-- Professional Builde -->
    <section class="professional_builder row" id="services">
        <div class="container">
            <div class="row builder_all">
                <div class="tittle wow fadeInUp" style="padding-bottom: 100px;">
                    <h2 style="padding: 0 !important;">NOS SERVICES</h2>
                    <h4>Les professionnels réalisent leurs prestations dans différents domaines</h4>
                </div>
                <div class="container col-md-12">
					{% set increment=0 %}
					<div class="container col-md-12">
					{% for i in 0..longueur %}
						{% if i%4 ==0%}
							</div>
							<div class="container col-md-12">
						{% endif %}
						<div class="col-md-3 builder">
							<i class="fa fa-home" aria-hidden="true"></i>
							<p style="size: A4"><strong>{{services[i].nomService}}</strong></p>
						</div>
					{% endfor %}
					</div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}{#End Professional Builde#}
{% block garanties %}<!-- Garanties Area -->
    <section class="about_us_area row" id="garanties">
        <div class="container">
            <div class="tittle wow fadeInUp">
                <h2>NOS GARANTIES</h2>
                <h4>Trouvez l'artisan qui correspond à votre besoin</h4>
            </div>
            <div class="row about_row">
                <div class="who_we_area col-md-9 col-sm-6" style="text-align: left;">
                    <div class="row" style="color: black;">
