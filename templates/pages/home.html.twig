            <div data-thumb="{{ asset('build/images/slider-2.jpg') }}" data-src="{{ asset('build/images/slider-2.jpg') }}">
                <div class="camera_caption">
                    <div class="container">
                        <h5 class=" wow fadeInUp animated">BIENVENUE</h5>
                        <h3 class=" wow fadeInUp animated" data-wow-delay="0.5s">SERRURIER DE MA VILLE</h3>
