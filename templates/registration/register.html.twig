{% extends 'base.html.twig' %}
{% block title %}SR2F | Inscription{% endblock %}

{% block body %}

<div class="jumbotron" style="padding-top : 5%; padding-bottom: 10%">
    <div class="container-fluid">

<div class="row">
    <div class="container-fluid text-center">    
        <div class="row content">
            <div class="col-sm-2 sidenav"></div>
                <div class="col-sm-8">
                    <div class="tittle wow fadeInUp">
                        <h2 style="padding-top: 0px">Formulaire d'inscription</h2>
                        <br>
                        <br>
                        <br>
                    </div>
                </div>
            </div>
        </div>
     </div>
 </div>

<div id="registerForm">

		
{{ form_start(registrationForm) }}
<div class="row">
     <div class="col-md-3 col-md-offset-3">{{ form_row(registrationForm.nom, {'label':'Nom: ', 'attr': {'class':'input-group', 'placeholder':'Votre nom'} }) }}
	 </div>
        <div class="col-md-3 ">{{ form_row(registrationForm.prenom, {'label':'Prénom: ', 'attr': {'class':'input-group', 'placeholder':'Votre prénom'} }) }}
		</div>
</div>
<div class="row">
        <div class="col-md-3 col-md-offset-3" style="margin-bottom : 10px;">{{ form_row(registrationForm.mail, {'label':'E-mail: ', 'attr': {'class':'input-group', 'placeholder':'Votre email'} }) }}</div>
        	 <div class="col-md-3 ">{{ form_row(registrationForm.tel, {'label':'Téléphone: ', 'attr': {'class':'input-group', 'placeholder':'Votre numéro de téléphone','pattern':'(0)[1-9]\\d{8}','maxlength':'10'} }) }}</div>
 </div>	
<div class="row">
     <div class="col-md-3 col-md-offset-3">{{ form_row(registrationForm.motdepasse, {'label':'Mot de passe: ', 'attr': {'class':'input-group'} }) }}
	 </div>
        <div class="col-md-3 ">{{ form_row(registrationForm.verif_motdepasse, {'label':'Vérification: ', 'attr': {'class':'input-group'} }) }}
		</div>
</div>
<div class="row">
     <div class="col-md-3 col-md-offset-3">{{ form_row(registrationForm.adresseInterventionNumeroArtisan, {'label':'Numéro rue: ', 'attr': {'class':'input-group'} }) }}
	 </div>
        <div class="col-md-3 ">{{ form_row(registrationForm.adresseInterventionRueArtisan, {'label':'Rue: ', 'attr': {'class':'input-group'} }) }}
		</div>
</div>
<div class="row">
     <div class="col-md-3 col-md-offset-3">{{ form_row(registrationForm.adresseInterventionVilleArtisan, {'label':'Ville: ', 'attr': {'class':'input-group'} }) }}
	 </div>
        <div class="col-md-3 ">{{ form_row(registrationForm.adresseInterventionCpArtisan, {'label':'Code postal: ', 'attr': {'class':'input-group','pattern':'\\d{5}','maxlength':'5'} }) }}
		</div>
</div>
<div class="row">
     <div class="col-md-3 col-md-offset-3">{{ form_row(registrationForm.adresseComplementaireArtisan, {'label':"Complément d'adresse: ", 'attr': {'class':'input-group'} }) }}
	 </div>
        <div class="col-md-3 ">{{ form_row(registrationForm.siren, {'label':'SIREN: ', 'attr': {'class':'input-group', 'placeholder':'Le siren de votre entreprise','pattern':'\\d{9}','maxlength':'9'}} ) }}
		</div>
</div>		
<div class="row">
	<div class="col-md-6 col-md-offset-3">{{ form_row(registrationForm.tableauService, {'label':'Services proposés: ', 'attr': {'class':'input-group '} }) }}
	</div>

</div>		
<div class="row">
	<div class="col-md-6 col-md-offset-3">{{ form_row(registrationForm.description, {'label':"Description de l'entreprise: ", 'attr': {'class':'input-group', 'placeholder':'Une petite description de votr entreprise'} }) }}
	</div>

</div>
<div class="row">
	<div class="col-md-6 col-md-offset-3">{{ form_row(registrationForm.numassurance, {'label':'Numéro assurance décennale: ', 'attr': {'class':'input-group','pattern':'\\d+'} }) }}
	</div>

</div>		
<div class="row">
	<div class="col-md-6 col-md-offset-3">{{ form_row(registrationForm.Valider, {'label':'Valider'}) }}
	</div>

</div>			
		

        {{ form_end(registrationForm) }}


</div>
</div>
{% endblock %}