  <!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Mes devis{% endblock %}</title>
        {% block stylesheets %}
		
           <!-- Favicon -->
            <link rel="icon" href="{{ asset('build/images/favicon.png') }}" type="image/x-icon" />
            <!-- Bootstrap CSS -->
            <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet">
            <!-- Animate CSS -->
            <link href="{{ asset('build/vendors/animate/animate.css') }}" rel="stylesheet">
            <!-- Icon CSS-->
            <link rel="stylesheet" href="{{ asset('build/vendors/font-awesome/css/font-awesome.min.css') }}">
            <!-- Camera Slider -->
            <link rel="stylesheet" href="{{ asset('build/vendors/camera-slider/camera.css') }}">
            <!-- Owlcarousel CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/vendors/owl_carousel/owl.carousel.css') }}" media="all">
            <!--Theme Styles CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/css/style.css') }}" media="all" />
        {% endblock %}

          <style>
    

    /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
    .row.content {height: 450px}
    
    /* Set gray background color and 100% height */
    .sidenav {
      padding-top: 20px;
      background-color: #f1f1f1;
      height: 100%;
    }
 
    /* Set black background color, white text and some padding */
    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }
    
    /* On small screens, set height to 'auto' for sidenav and grid */
    @media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 15px;
      }
      .row.content {height:auto;} 
    }
  </style>
    </head>

<body>

{% block body %}
{% include 'navbar.html.twig' %}



<BR>
<div class="container-fluid text-center">
  <div class="row content">
	<div class="col-md-2 sidenav" >
	<h2>Historique</h2>
		<hr>
		  {% for Element in Historique %}
				<div style="display: inline;"> <a href="{{ path('mondevisdetail', {id: Element['0']}) }}"> Devis n° {{Element['0']}} : {{Element['1']}} </a></div> <br>
					
    {% endfor %}
	</div>



<div class="col-md-10" >
  <div class="tittle wow fadeInUp">
            <h2 style='padding-top: 0.1em'>Mes devis</h2>
            <br>
            <br>
            <br>
        </div>
  	<div class="Devis" >
		 <table class="table table-striped table-bordered table-hover text-center">
		<tr>
			<th>Nom</th>
    	<th>Prénom </th>
    	<th>Adresse Intervention</th>
			<th>Date du devis</th>
			<th>Date prévus de réalisation</th>
			<th>Fichier joint</th>
			<th>Status</th>
			<th>Visualisé </th>
		</tr>
		{% for Devis in chaineDevis %}
			 <tr>
				 <td>{{Devis[0]}}</td>
				 <td>{{Devis[1]}}</td>
				 <td>{{Devis[2]}}</td>
				 <td>{{Devis[3]}}</td>
				 <td>{{Devis[4]}}</td>
				 <td>{{Devis[5]}}</td>
				 <td>{{Devis[6]}}</td>
				 <td>{{Devis[7]}}</td>
			 </tr>
             {% endfor %}
		</table>
	</div>
</div>

</div>
</body>




{% endblock %}
