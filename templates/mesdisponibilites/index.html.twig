    <script src="{{ asset('build/vendors/Counter-Up/jquery.counterup.min.js') }}"></script>
    <script src="{{ asset('build/vendors/Counter-Up/waypoints.min.js') }}"></script>
    <!-- Owlcarousel JS -->
    <script src="{{ asset('build/vendors/owl_carousel/owl.carousel.min.js') }}"></script>
    <!-- Stellar JS -->
    <script src="{{ asset('build/vendors/stellar/jquery.stellar.js') }}"></script>
    <!-- Theme JS -->
    <script src="{{ asset('build/js/min/theme.min.js') }}"></script>
{% endblock %}

{% endblock %}