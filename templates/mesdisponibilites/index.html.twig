<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Mes disponibilités{% endblock %}</title>
        {% block stylesheets %}
            <!-- Favicon -->
            <link rel="icon" href="{{ asset('build/images/favicon.png') }}" type="image/x-icon" />
            <!-- Bootstrap CSS -->
            <link href="{{ asset('build/css/bootstrap.min.css') }}" rel="stylesheet">
            <!-- Animate CSS -->
            <link href="{{ asset('build/vendors/animate/animate.css') }}" rel="stylesheet">
            <!-- Icon CSS-->
            <link rel="stylesheet" href="{{ asset('build/vendors/font-awesome/css/font-awesome.min.css') }}">
            <!-- Camera Slider -->
            <link rel="stylesheet" href="{{ asset('build/vendors/camera-slider/camera.css') }}">
            <!-- Owlcarousel CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/vendors/owl_carousel/owl.carousel.css') }}" media="all">
            <!--Theme Styles CSS-->
            <link rel="stylesheet" type="text/css" href="{{ asset('build/css/style.css') }}" media="all" />
            

        {% endblock %}

    </head>

<body>
{# add this at the beginning of your template #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
      <a class="nav-item nav-link" href="#">Features</a>
      <a class="nav-item nav-link" href="#">Pricing</a>
      <a class="nav-item nav-link" href="#">Other</a>
    </div>
  </div>
</nav>


<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav"></div>
    <div class="col-sm-8">
        <div class="tittle wow fadeInUp">
            <h2>Veuillez entrer vos disponibilités</h2>
            <br>
            <br>
            <br>
        </div>
            {{ form_start(form) }}
                <table class="table table-striped table-bordered table-hover text-center">
                <thead class="thead-">
                    <tr>
                        <th  style="text-align: center; vertical-align: middle;"></th>
                        <th  style="text-align: center; vertical-align: middle;">Lundi</th>
                        <th  style="text-align: center; vertical-align: middle;">Mardi</th>
                        <th  style="text-align: center; vertical-align: middle;">Mercredi</th>
                        <th  style="text-align: center; vertical-align: middle;">Jeudi</th>
                        <th  style="text-align: center; vertical-align: middle;">Vendredi</th>
                        <th  style="text-align: center; vertical-align: middle;">Samedi</th>
                        <th  style="text-align: center; vertical-align: middle;">Dimanche</th>
                    </tr>
                </thead>
                    <tr>
                        <td scope="row" style="font-weight:bold;">Matin</td>
                        <td>{{ form_row(form.lundiMatin) }}</td>
                        <td>{{ form_row(form.mardiMatin) }}</td>
                        <td>{{ form_row(form.mercrediMatin) }}</td>
                        <td>{{ form_row(form.jeudiMatin) }}</td>
                        <td>{{ form_row(form.vendrediMatin) }}</td>
                        <td>{{ form_row(form.samediMatin) }}</td>
                        <td>{{ form_row(form.dimancheMatin) }}</td>
                    </tr>
                    <tr>
                        <td scope="row" style="font-weight:bold;">Après-midi</td>
                        <td>{{ form_row(form.lundiAprem) }}</td>
                        <td>{{ form_row(form.mardiAprem) }}</td>
                        <td>{{ form_row(form.mercrediAprem) }}</td>
                        <td>{{ form_row(form.jeudiAprem) }}</td>
                        <td>{{ form_row(form.vendrediAprem) }}</td>
                        <td>{{ form_row(form.samediAprem) }}</td>
                        <td>{{ form_row(form.dimancheAprem) }}</td>
                    </tr>
                    <tr>
                        <td scope="row" style="font-weight:bold;">Soir</td>
                        <td>{{ form_row(form.lundiSoir) }}</td>
                        <td>{{ form_row(form.mardiSoir) }}</td>
                        <td>{{ form_row(form.mercrediSoir) }}</td>
                        <td>{{ form_row(form.jeudiSoir) }}</td>
                        <td>{{ form_row(form.vendrediSoir) }}</td>
                        <td>{{ form_row(form.samediSoir) }}</td>
                        <td>{{ form_row(form.dimancheSoir) }}</td>
                    </tr>
                </table>
                
               {{ form_row(form.Valider) }}

        {{ form_end(form) }}
    </div>
    <div class="col-sm-2 sidenav"></div>
    </div>
  </div>
</div>
</body>
{% block javascripts %}
    <!-- jQuery JS -->
    <script src="{{ asset('build/js/jquery-1.12.0.min.js') }}"></script>
    <!-- Bootstrap JS -->
    <script src="{{ asset('build/js/bootstrap.min.js') }}"></script>
    <!-- Animate JS -->
    <script src="{{ asset('build/vendors/animate/wow.min.js') }}"></script>
    <!-- Camera Slider -->
    <script src="{{ asset('build/vendors/camera-slider/jquery.easing.1.3.js') }}"></script>
    <script src="{{ asset('build/vendors/camera-slider/camera.min.js') }}"></script>
